<?xml version="1.0" encoding="UTF-8"?>
<!-- PAGOO DATASOURCE CONFIG -->
<datasources xmlns="http://www.jboss.org/ironjacamar/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <datasource jndi-name="java:jboss/datasources/pagooDS" pool-name="pagoo_pool" enabled="true" use-java-context="true">
        <connection-url>jdbc:postgresql://127.0.0.1:5432/pagoo</connection-url>
        <driver>postgresql</driver>
        <security>
            <user-name>postgres</user-name>
            <password>postgres</password>
        </security>
    </datasource>
</datasources>
 
